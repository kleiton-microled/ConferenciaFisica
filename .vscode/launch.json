{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Angular - Chrome Debug",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "breakOnLoad": true
        },
        {
            "name": "Angular - Attach Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "breakOnLoad": true
        }
    ]
}
